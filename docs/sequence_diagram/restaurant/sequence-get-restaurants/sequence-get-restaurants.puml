@startuml Get All Restaurants (GET)

header Restaurant Reservation System Sequence Diagram
footer Page %page% of %lastpage%
title "Get All Restaurants (GET)"

participant "Client" as client
participant "<<javaScript>>\n:server" as server
participant "<<router>>\n:restaurants" as routerRestaurants
participant "<<controllers>>\n:restaurants" as controllersRestaurants
participant "<<model>>\n:Restaurant" as modelRestaurant
database "<<MongoDB>>\n:restaurants" as RestaurantsDatabase

client->server ++:req.get('/api/v1/restaurants?district=Bangkok&page=1&limit=5')
server->routerRestaurants ++:app.use('/api/v1/restaurants',restaurants)
routerRestaurants -> controllersRestaurants ++:getRestaurants()
controllersRestaurants->controllersRestaurants:parse query parameters\n(filters, pagination, sorting)
controllersRestaurants->controllersRestaurants:build MongoDB query
controllersRestaurants->modelRestaurant ++:find(query).populate('reservations')
modelRestaurant ->RestaurantsDatabase ++: RestaurantSchema
RestaurantsDatabase --> modelRestaurant --: restaurants
controllersRestaurants <-- modelRestaurant --:restaurants
controllersRestaurants->modelRestaurant ++:countDocuments(query)
modelRestaurant ->RestaurantsDatabase ++: count query
RestaurantsDatabase --> modelRestaurant --: total
controllersRestaurants <-- modelRestaurant --:total
controllersRestaurants->controllersRestaurants:build pagination info
controllersRestaurants->client --:200 - Restaurants retrieved\n{success: true, count, total, pagination, data}

@enduml